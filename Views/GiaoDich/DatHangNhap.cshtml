@{
    ViewBag.Title = "Đặt hàng nhập";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-3">
    <div class="row">
        <!-- Bộ lọc bên trái -->
        <div class="col-md-3">
            <div class="card border-0 shadow-sm mb-3" style="border-radius: 10px;">
                <div class="card-body">
                    <h5 class="fw-bold mb-3" style="color:#428446;">Đặt hàng nhập</h5>

                    <!-- Chi nhánh -->
                    <div class="mb-3">
                        <label class="form-label fw-semibold" style="color:#428446;">Chi nhánh</label>
                        <div class="selected-item border rounded px-2 py-2 fw-semibold"
                             style="background-color:#cde9cd; color:#428446; border-color:#428446;">
                            CN - NVC
                        </div>
                    </div>

                    <!-- Trạng thái -->
                    <div class="mb-3">
                        <label class="form-label fw-semibold" style="color:#428446;">Trạng thái</label>
                        <div class="d-flex flex-wrap gap-2">
                            <span class="badge px-3 py-2" style="background-color:#cde9cd; color:#428446;">Phiếu tạm</span>
                            <span class="badge px-3 py-2" style="background-color:#a6d8a8; color:#1f421f;">Đã xác nhận NCC</span>
                            <span class="badge px-3 py-2" style="background-color:#81c784; color:white;">Nhập một phần</span>
                            <span class="badge px-3 py-2 bg-secondary">Hoàn tất</span>
                        </div>
                    </div>

                    <!-- Thời gian -->
                    <div class="mb-3">
                        <label class="form-label fw-semibold" style="color:#428446;">Thời gian</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="thoigian" checked style="border-color:#428446;">
                            <label class="form-check-label" style="color:#428446;">Tháng này</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="thoigian" style="border-color:#428446;">
                            <label class="form-check-label" style="color:#428446;">Tùy chỉnh</label>
                        </div>
                        <input type="date" class="form-control mt-2" style="border:1px solid #428446; color:#428446;" />
                    </div>

                    <!-- Người tạo -->
                    <div class="mb-3">
                        <label class="form-label fw-semibold" style="color:#428446;">Người tạo</label>
                        <select class="form-select" style="border:1px solid #428446; color:#428446;">
                            <option selected>Chọn người tạo</option>
                            <option>Nguyễn Văn A</option>
                            <option>Trần Thị B</option>
                            <option>Lê Văn C</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>

        <!-- Danh sách đặt hàng -->
        <div class="col-md-9">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <!-- Thanh tìm kiếm -->
                <div class="input-group" style="max-width: 400px;">
                    <input type="text" class="form-control" placeholder="Theo mã phiếu đặt hàng nhập..." style="border:1px solid #428446;" />
                    <button class="btn" style="background-color:#428446; color:white;"><i class="bi bi-funnel"></i></button>
                </div>

                <!-- Nút thao tác -->
                <div>
                    <button class="btn fw-semibold me-2" style="background-color:#428446; color:white; border:none;">
                        <i class="bi bi-plus-lg"></i> Đặt hàng nhập
                    </button>
                    <button class="btn me-2" style="color:#428446; border:1px solid #428446;">
                        <i class="bi bi-file-earmark-arrow-down"></i> Xuất file
                    </button>
                    <button class="btn" style="color:#428446; border:1px solid #428446;">
                        <i class="bi bi-gear"></i> Cài đặt
                    </button>
                </div>
            </div>

            <!-- Bảng danh sách -->
            <div class="card border-0 shadow-sm" style="border-radius:10px;">
                <div class="card-header fw-semibold" style="background-color:#428446; color:white;">
                    Danh sách phiếu đặt hàng nhập
                </div>
                <div class="card-body p-0">
                    <table class="table table-hover align-middle mb-0 text-center">
                        <thead style="background-color:#cde9cd; color:#1f421f;">
                            <tr>
                                <th></th>
                                <th>Mã đặt hàng nhập</th>
                                <th>Thời gian</th>
                                <th>Nhà cung cấp</th>
                                <th>Ngày nhập dự kiến</th>
                                <th>Số ngày chờ</th>
                                <th>Cần trả NCC</th>
                                <th>Trạng thái</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><input type="checkbox" style="border-color:#428446;" /></td>
                                <td>PO00452</td>
                                <td>03/11/2025 15:32</td>
                                <td>VIPOMALL</td>
                                <td>05/11/2025</td>
                                <td>2</td>
                                <td>12,600,000</td>
                                <td><span class="badge" style="background-color:#cde9cd; color:#428446;">Phiếu tạm</span></td>
                            </tr>
                            <tr>
                                <td><input type="checkbox" style="border-color:#428446;" /></td>
                                <td>PO00451</td>
                                <td>02/11/2025 14:10</td>
                                <td>SAKI</td>
                                <td>03/11/2025</td>
                                <td>1</td>
                                <td>24,000,000</td>
                                <td><span class="badge" style="background-color:#a6d8a8; color:#1f421f;">Đã xác nhận NCC</span></td>
                            </tr>
                            <tr>
                                <td><input type="checkbox" style="border-color:#428446;" /></td>
                                <td>PO00449</td>
                                <td>01/11/2025 10:40</td>
                                <td>EBIKE PHỤ TÙNG</td>
                                <td>02/11/2025</td>
                                <td>0</td>
                                <td>18,450,000</td>
                                <td><span class="badge" style="background-color:#81c784; color:white;">Hoàn tất</span></td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <!-- Nếu không có kết quả -->
                <div class="text-center py-5 text-muted" id="noResults" style="display:none;">
                    <i class="bi bi-inbox fs-1 text-secondary"></i>
                    <p class="mt-2">Không tìm thấy kết quả<br />
                        Nhấn <a href="#" style="color:#428446; font-weight:600;">vào đây</a> để tiếp tục tìm kiếm.</p>
                </div>
            </div>
        </div>
    </div>
</div>
