<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Quản lý nhân viên</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f9fff8; /* xanh bơ nhạt */
    }
    .btn-green {
      background-color: #A8E6CF; /* xanh bơ */
      border: none;
      color: #2E7D32;
      font-weight: 500;
    }
    .btn-green:hover {
      background-color: #9cd9c3;
    }
    .card {
      border-radius: 15px;
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
    h3 {
      color: #2E7D32;
    }
  </style>
</head>
<body>
  <div class="container mt-4">
    <h3 class="text-center mb-4">Quản lý nhân viên</h3>

    <!-- Bảng danh sách nhân viên -->
    <div class="card p-3">
      <table class="table table-bordered table-striped">
        <thead class="table-success">
          <tr>
            <th>Mã NV</th>
            <th>Họ tên</th>
            <th>Chức vụ</th>
            <th>Trạng thái</th>
            <th>Hành động</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>NV001</td>
            <td>Nguyễn Văn A</td>
            <td>Quản lý</td>
            <td>Đang hoạt động</td>
            <td>
              <button class="btn btn-green btn-sm" onclick="openAccount()">Mở tài khoản</button>
              <button class="btn btn-warning btn-sm" onclick="lockAccount()">Khóa tài khoản</button>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <script>
    function openAccount() {
      alert("Chức năng mở tài khoản!");
    }

    function lockAccount() {
      alert("Chức năng khóa tài khoản!");
    }
  </script>
</body>
</html>
