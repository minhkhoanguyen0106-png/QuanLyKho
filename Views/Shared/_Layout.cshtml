<script>
    document.addEventListener('DOMContentLoaded', function () {
        
        // --- LOGIC XỬ LÝ BỘ LỌC NGÀY (Dự kiến hết hàng & Thời gian tạo) ---
        
        function setupDateFilter(radioGroupName) {
            const radios = document.querySelectorAll(input[type="radio"][name="${radioGroupName}"]);
            // Tìm input date tương ứng.
            const customRadio = document.querySelector(input[type="radio"][name="${radioGroupName}"][id$="TuyChinh"]); 
            const dateInput = customRadio ? customRadio.closest('.form-check').querySelector('input[type="date"]') : null;

            if (!dateInput) return; // Thoát nếu không tìm thấy input date

            // 1. Khởi tạo trạng thái ban đầu
            function initializeState() {
                const isCustomChecked = document.querySelector(input[type="radio"][name="${radioGroupName}"]:checked).id.endsWith('TuyChinh');
                dateInput.disabled = !isCustomChecked;
                if (!isCustomChecked) {
                    dateInput.value = ''; // Xóa giá trị nếu không phải tùy chỉnh
                }
            }

            // 2. Gán sự kiện cho các radio button
            radios.forEach(radio => {
                radio.addEventListener('change', function() {
                    if (this.id.endsWith('TuyChinh')) {
                        dateInput.disabled = false;
                        dateInput.focus();
                    } else {
                        dateInput.disabled = true;
                        dateInput.value = ''; 
                    }
                });
            });

            // Khởi tạo trạng thái
            initializeState();
        }

        // Áp dụng cho bộ lọc Linh kiện
        setupDateFilter('duKienHetHang');
        setupDateFilter('thoiGianTao');
        
        // --- LOGIC XỬ LÝ THANH TÌM KIẾM (Chức năng tìm kiếm sẽ cần AJAX/Server-side) ---
        // Hiện tại chỉ có giao diện, bạn có thể thêm logic ở đây nếu cần.

    });
</script>

