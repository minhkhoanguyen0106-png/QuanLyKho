﻿@using Microsoft.AspNetCore.Http
@{
    var user = Context.Session.GetString("Username");
    var role = Context.Session.GetString("Role");
    Layout = null;
    // Màu chủ đạo
    var primaryGreen = "#28a745"; 
    
    // 1. Lấy đường dẫn hiện tại để xử lý Active Menu
    var currentPath = Context.Request.Path.ToString().ToLower();
    string pathLower = currentPath.ToLower(); // Sử dụng pathLower cho nhất quán
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Kho Ebike</title>

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="~/dist/css/adminlte.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.4.1/css/buttons.bootstrap4.min.css">

    <style>
        /* --- TÙY CHỈNH GIAO DIỆN LIGHT MODE & XANH LÁ --- */

        /* 1. Ẩn thanh trượt (Scrollbar) ở Sidebar nhưng vẫn cho phép cuộn */
        .main-sidebar .sidebar::-webkit-scrollbar {
            display: none; /* Chrome, Safari, Opera */
        }
        .main-sidebar .sidebar {
            -ms-overflow-style: none;  /* IE and Edge */
            scrollbar-width: none;  /* Firefox */
        }

        /* 2. Tùy chỉnh màu Active cho Sidebar Light */
        /* Khi menu được chọn (Active): Nền xanh, chữ trắng, bóng đổ nhẹ */
        .sidebar-light-success .nav-sidebar > .nav-item > .nav-link.active {
            background-color: @primaryGreen !important;
            color: #fff !important;
            box-shadow: 0 4px 6px rgba(40, 167, 69, 0.25); /* Bóng xanh nhẹ */
        }

        /* 3. Màu khi di chuột (Hover) */
        .sidebar-light-success .nav-sidebar > .nav-item > .nav-link:hover {
            color: @primaryGreen !important;
            background-color: rgba(40, 167, 69, 0.1); /* Nền xanh rất nhạt khi hover */
        }
        
        /* 4. Menu con (Cấp 2) */
        .nav-treeview > .nav-item > .nav-link.active {
            background-color: rgba(40, 167, 69, 0.1) !important;
            color: @primaryGreen !important;
            font-weight: 600;
        }
        .nav-treeview > .nav-item > .nav-link:hover {
            color: @primaryGreen !important;
        }

        /* 5. Logo Brand */
        .brand-link {
            border-bottom: 1px solid #dee2e6 !important;
            background-color: #fff; /* Nền trắng cho logo */
        }
        .brand-text {
            color: @primaryGreen !important;
            font-weight: 700 !important;
        }
    </style>
    
    @RenderSection("Styles", required: false)
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">

        <nav class="main-header navbar navbar-expand navbar-white navbar-light border-bottom-0 shadow-sm">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button">
                        <i class="fas fa-bars text-success"></i> </a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <h5 class="nav-link mb-0 font-weight-bold text-dark">@ViewData["Title"]</h5>
                </li>
            </ul>

            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <span class="nav-link text-dark">
                        Xin chào, <strong>@user</strong> <small class="text-muted">(@(role == "Manager" ? "Quản lý" : "Nhân viên"))</small>
                    </span>
                </li>
                <li class="nav-item">
                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                        <button type="submit" class="btn btn-outline-danger btn-sm mt-1 ml-2">
                            <i class="fas fa-sign-out-alt"></i>
                        </button>
                    </form>
                </li>
            </ul>
        </nav>

        <aside class="main-sidebar sidebar-light-success elevation-4">
            <a href="/Home/Index" class="brand-link">
                <i class="fas fa-motorcycle brand-image img-circle elevation-1 d-flex justify-content-center align-items-center" 
                    style="width: 33px; height: 33px; background: @primaryGreen; color: white; font-size: 18px;"></i>
                <span class="brand-text">Kho Ebike</span>
            </a>

            <div class="sidebar">
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column nav-child-indent" data-widget="treeview" role="menu" data-accordion="false">
                        
                        
                        
                        @if (role == "Manager")
                        {
                            <li class="nav-item">
                            <a href="/Home/Index" class="nav-link @(pathLower == "/" || pathLower.Contains("/home/index") || pathLower.Contains("tongquan") ? "active" : "")"> 
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>Tổng quan</p>
                            </a>
                            </li>
                            <li class="nav-item has-treeview @(pathLower.Contains("/ncc/") ? "menu-open" : "")">
                                <a href="#" class="nav-link @(pathLower.Contains("/ncc/") ? "active" : "")">
                                    <i class="nav-icon fas fa-shipping-fast"></i>
                                    <p>Nhà cung cấp <i class="right fas fa-angle-left"></i></p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item"><a href="/NCC/DanhSachNCC" class="nav-link @(pathLower.Contains("danhsachncc") ? "active" : "")"><i class="far fa-circle nav-icon"></i><p>Danh sách NCC</p></a></li>
                                    <li class="nav-item"><a href="/NCC/Xuat" class="nav-link @(pathLower.Contains("/ncc/xuat") ? "active" : "")"><i class="far fa-circle nav-icon"></i><p>Lịch sử xuất</p></a></li>
                                    <li class="nav-item"><a href="/NCC/Nhap" class="nav-link @(pathLower.Contains("/ncc/nhap") ? "active" : "")"><i class="far fa-circle nav-icon"></i><p>Lịch sử nhập</p></a></li>
                                </ul>
                            </li>

                            <li class="nav-item has-treeview @(pathLower.Contains("/hanghoa/") ? "menu-open" : "")">
                                <a href="#" class="nav-link @(pathLower.Contains("/hanghoa/") ? "active" : "")">
                                    <i class="nav-icon fas fa-boxes"></i>
                                    <p>Kho hàng <i class="right fas fa-angle-left"></i></p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item"><a href="/HangHoa/DanhSach" class="nav-link @(pathLower.Contains("danhsach") ? "active" : "")"><i class="far fa-circle nav-icon"></i><p>Danh sách kho hàng</p></a></li>
                                    <li class="nav-item"><a href="/HangHoa/QuanLyXe" class="nav-link @(pathLower.Contains("quanlyxe") ? "active" : "")"><i class="far fa-circle nav-icon"></i><p>Quản lý hàng hóa</p></a></li>
                                    <li class="nav-item"><a href="/HangHoa/QuanLyLinhKien" class="nav-link @(pathLower.Contains("quanlylinhkien") ? "active" : "")"><i class="far fa-circle nav-icon"></i><p>Quản lý linh kiện</p></a></li>
                                </ul>
                            </li>
                            <li class="nav-item has-treeview @(pathLower.Contains("/giaodich/") ? "menu-open" : "")">
                                <a href="#" class="nav-link @(pathLower.Contains("/giaodich/") ? "active" : "")">
                                    <i class="nav-icon fas fa-cash-register"></i>
                                    <p>Giao dịch <i class="right fas fa-angle-left"></i></p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item"><a href="/GiaoDich/TraCuu" class="nav-link @(pathLower.Contains("tracuu") ? "active" : "")"><i class="far fa-circle nav-icon"></i><p>Tra Cứu Lịch Sử</p></a></li>
                                </ul>
                            </li>

                            <li class="nav-item has-treeview @(pathLower.Contains("/nhanvien/") ? "menu-open" : "")">
                                <a href="#" class="nav-link @(pathLower.Contains("/nhanvien/") ? "active" : "")">
                                    <i class="nav-icon fas fa-users"></i>
                                    <p>Nhân viên <i class="right fas fa-angle-left"></i></p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item"><a href="/NhanVien/NhanVien" class="nav-link @(pathLower.Contains("nhanvien/nhanvien") ? "active" : "")"><i class="far fa-circle nav-icon"></i><p>Danh sách NV</p></a></li>
                                </ul>
                            </li>
                        }

                        @if (role == "Employee")
                        { 
                            <!-- 1. Tổng quan -->
                            <li class="nav-item">
                            <a href="/NhanVien/Index" class="nav-link @(pathLower.Contains("/nhanvien/index") || pathLower.Contains("tongquan") ? "active" : "")"> 
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>Tổng quan</p>
                            </a>
                            </li>
                            
                            <!-- 2. Tạo phiếu (Nhập/Xuất) -->
                            <li class="nav-item has-treeview @(pathLower.Contains("/nhaphang/") || pathLower.Contains("/xuathang/") ? "menu-open" : "")">
                                <a href="#" class="nav-link @(pathLower.Contains("/nhaphang/") || pathLower.Contains("/xuathang/") ? "active" : "")">
                                    <i class="nav-icon fas fa-file-invoice"></i>
                                    <p>Tạo phiếu <i class="right fas fa-angle-left"></i></p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item"><a href="@Url.Action("index","NhapHang")" class="nav-link @(pathLower.Contains("nhaphang") ? "active" : "")"><i class="far fa-circle nav-icon"></i><p>Tạo phiếu nhập</p></a></li>
                                    <li class="nav-item"><a href="@Url.Action("index",controller: "XuatHang")" class="nav-link @(pathLower.Contains("xuathang") ? "active" : "")"><i class="far fa-circle nav-icon"></i><p>Tạo phiếu xuất</p></a></li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a href="@Url.Action("dathangnhap","GiaoDich")" class="nav-link @(pathLower.Contains("dathangnhap") ? "active" : "")">
                                    <i class="nav-icon fas fa-truck-loading"></i><p>Đặt hàng nhập</p>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </aside>

        <div class="content-wrapper" style="background-color: #f7fcf7;"> 
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            
                        </div>
                    </div>
                </div>
            </div>
            <div class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>
        </div>

        <footer class="main-footer">
            <div class="float-right d-none d-sm-inline">Kho Ebike System</div>
            <strong>&copy; 2025</strong>
        </footer>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/dist/js/adminlte.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap4.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.bootstrap4.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.print.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.colVis.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>