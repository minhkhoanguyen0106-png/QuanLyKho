
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kho Ebike</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/site.css" />
</head>
<body>
    <div class="wrapper d-flex">
        <!-- Sidebar -->
        <nav class="sidebar p-3">
            <h4 class="text-center mb-4">Nhân viên</h4>
            <ul class="nav flex-column">

                <!-- TẠO PHIẾU -->
                <li class="nav-item position-relative">
                    <a href="#" class="nav-link text-white d-flex justify-content-between align-items-center">
                        Quản lý phiếu
                        <span class="ms-2">▾</span>
                    </a>
                    <ul class="submenu list-unstyled ps-3">
                        <li><a href="/Phieu/TaoPhieuNhap" class="nav-link text-light small">• Tạo phiếu nhập</a></li>
                        <li><a href="/Phieu/TaoPhieuXuat" class="nav-link text-light small">• Tạo phiếu xuất</a></li>
                    </ul>
                </li>

                <!-- KIỂM KHO -->
                <li class="nav-item position-relative">
                    <a href="/Kho/KiemKho" class="nav-link text-white d-flex justify-content-between align-items-center">
                        Kiểm kho
                    </a>
                </li>

                <!-- BÁO CÁO -->
                <li class="nav-item position-relative">
                    <a href="#" class="nav-link text-white d-flex justify-content-between align-items-center">
                        Xem báo cáo
                        <span class="ms-2">▾</span>
                    </a>
                    <ul class="submenu list-unstyled ps-3">
                        <li><a href="/BaoCao/BaoCaoNhap" class="nav-link text-light small">• Báo cáo nhập</a></li>
                        <li><a href="/BaoCao/BaoCaoXuat" class="nav-link text-light small">• Báo cáo xuất</a></li>
                    </ul>
                </li>
            </ul>
        </nav>

        <!-- Main content -->
        <div class="content flex-grow-1">
            <!-- Header -->
            <header class="header shadow-sm d-flex justify-content-between align-items-center p-3">
                <h5 class="mb-0">@ViewData["Title"]</h5>
                <div>
                    <span class="me-3">Xin chào, Nhân viên</span>
                    <form asp-controller="Account" asp-action="Logout" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-outline-danger btn-sm">Đăng xuất</button>
                    </form>
                </div>
            </header>

            <!-- Main body -->
            <main class="p-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
