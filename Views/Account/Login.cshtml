@using Microsoft.AspNetCore.Mvc.Rendering
@using Microsoft.AspNetCore.Http
@{
    ViewBag.Title = "Đăng nhập hệ thống";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <style>
        :root {
            --primary-color: #428446;
            --primary-hover: #3b743e;
            --bg-color: #f0fdf4; 
        }

        body {
            background: linear-gradient(135deg, var(--bg-color) 0%, #e8f9e8 100%);
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: "Segoe UI", sans-serif;
        }

        .login-container {
            max-width: 420px;
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
            background-color: #fff;
        }

        .login-header {
            color: var(--primary-color);
            border-bottom: 2px solid var(--primary-color);
            padding-bottom: 15px;
            margin-bottom: 30px;
        }

        .input-group-text {
            background-color: var(--primary-color);
            color: white;
            border: 1px solid var(--primary-color);
            border-radius: 8px 0 0 8px !important;
        }

        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.25rem rgba(66,132,70,0.25);
        }

        .btn-login {
            background-color: var(--primary-color);
            color: white;
            font-weight: bold;
            border-radius: 8px;
            transition: 0.3s;
            padding: 10px 0;
        }

        .btn-login:hover {
            background-color: var(--primary-hover);
            transform: translateY(-2px);
        }

        .btn-staff-login {
            color: var(--primary-color);
            border-color: var(--primary-color);
            border-radius: 8px;
            font-weight: 500;
        }

        .btn-staff-login:hover {
            background-color: var(--primary-color);
            color: white;
        }

        .text-danger {
            font-size: 0.875em;
        }
    </style>
</head>

<body>

    <div class="login-container">

        <div class="text-center login-header">
            <i class="fa-solid fa-box-open fa-3x mb-2"></i>
            <h4 class="fw-bold m-0">ĐĂNG NHẬP HỆ THỐNG</h4>
            <small class="text-muted">Quản lý kho vận và bán hàng</small>
        </div>

        <form id="loginForm" method="post" action="/Account/Login">

            <input type="hidden" id="LoginRole" name="LoginRole" value="Manager" />

            <div class="mb-3">
                <label class="form-label fw-semibold">Tên đăng nhập</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fa-solid fa-user"></i></span>
                    <input type="text" class="form-control" id="username" name="Username" placeholder="Nhập tên đăng nhập">
                </div>
            </div>

            <div class="mb-4">
                <label class="form-label fw-semibold">Mật khẩu</label>
                <div class="input-group password-wrapper">
                    <span class="input-group-text"><i class="fa-solid fa-lock"></i></span>
                    <input type="password" class="form-control" id="password" name="Password" placeholder="Nhập mật khẩu">
                    <i class="fa-solid fa-eye" id="togglePassword"></i>
                </div>
            </div>

            <div class="d-grid gap-2 mt-4">
                <button type="submit" class="btn btn-login">Đăng nhập cho Quản lý</button>
            </div>
        </form>

        <div class="text-center mt-3">
            <button class="btn btn-staff-login btn-sm border" onclick="loginAsStaff()">
                <i class="fa-solid fa-user-tie me-1"></i> Đăng nhập cho Nhân viên
            </button>
        </div>

    </div>

    <script>
        function loginAsStaff() {
            document.getElementById("LoginRole").value = "Employee";
            document.getElementById("loginForm").submit();
        }
    </script>

</body>
</html>
