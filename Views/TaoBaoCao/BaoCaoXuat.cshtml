@{
    ViewData["Title"] = "Tạo báo cáo xuất hàng";
    Layout = "~/Views/Shared/_LayoutNV.cshtml";
}

<style>
    /* Định nghĩa Màu Xanh Lá TƯƠI mới */
    :root {
        /* Màu Xanh Lá Tươi, tương đương AdminLTE Success/Info */
        --custom-green-dark: #4CAF50; /* Base Color */
        --custom-green-light: #66BB6A; /* Light Color for Gradient */
    }

    /* Thay thế class màu mặc định (danger) bằng màu xanh tươi mới */
    .text-danger, .border-danger {
        color: var(--custom-green-dark) !important;
        border-color: var(--custom-green-dark) !important;
    }
    
    /* Màu nền khu vực làm việc (Cần sáng hơn nữa) */
    .content-wrapper { /* AdminLTE uses .content-wrapper for the main content background */
        background-color: #f4f6f9 !important; /* AdminLTE default light background */
    }

    /* Thay thế màu đỏ Card Header (bg-danger) bằng màu xanh lá tươi mới */
    .bg-danger {
        background-color: var(--custom-green-dark) !important;
        background-image: linear-gradient(180deg, var(--custom-green-light) 10%, var(--custom-green-dark) 100%) !important;
        color: white !important;
    }
    
    /* Thiết lập lại nút Primary và Outline Danger sang màu xanh lá */
    .btn-primary {
        background-color: var(--custom-green-dark) !important;
        border-color: var(--custom-green-dark) !important;
        color: white !important;
    }

    .btn-outline-danger {
        color: var(--custom-green-dark) !important;
        border-color: var(--custom-green-dark) !important;
    }
    .btn-outline-danger:hover {
        background-color: var(--custom-green-dark) !important;
        color: white !important;
    }

    /* Đảm bảo thead dùng màu xanh lá tươi AdminLTE */
    .table-danger {
        background-color: var(--custom-green-dark) !important;
        color: white;
    }

    /* Thêm shadow nhẹ cho Card để giống AdminLTE */
    .card.shadow-sm {
        box-shadow: 0 0 1px rgba(0,0,0,.125), 0 1px 3px rgba(0,0,0,.2) !important;
    }
</style>

<section class="content pt-3">
    <div class="container-fluid">
        
        <div class="row mb-4">
            <div class="col-12">
                <h2 class="fw-bold mb-0 text-dark">
                    <i class="fas fa-boxes me-2 text-danger"></i> TẠO BÁO CÁO XUẤT HÀNG
                </h2>
                </div>
        </div>

        <div class="card card-outline card-success">
            <div class="card-header bg-danger text-white fw-semibold">
                <h3 class="card-title text-white"><i class="fas fa-filter me-1"></i> Bộ lọc báo cáo</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool text-white" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <form class="row g-3">
                    <div class="col-12 col-md-3">
                        <label class="form-label">Chi nhánh</label>
                        <select class="form-select select2" style="width: 100%;">
                            <option>Tất cả</option>
                            <option>CN Nguyễn Văn Cừ</option>
                            <option>CN Lý Thường Kiệt</option>
                        </select>
                    </div>

                    <div class="col-12 col-md-3">
                        <label class="form-label">Khách hàng</label>
                        <select class="form-select select2" style="width: 100%;">
                            <option>Tất cả</option>
                            <option>Nguyễn Văn An</option>
                            <option>Trần Minh Hoàng</option>
                            <option>Công ty TNHH ABC</option>
                        </select>
                    </div>

                    <div class="col-12 col-md-3">
                        <label class="form-label">Loại xuất</label>
                        <select class="form-select select2" style="width: 100%;">
                            <option>Tất cả</option>
                            <option>Xuất bán</option>
                            <option>Xuất điều chuyển</option>
                            <option>Xuất trả NCC</option>
                        </select>
                    </div>

                    <div class="col-6 col-md-1">
                        <label class="form-label">Từ ngày</label>
                        <input type="date" class="form-control form-control-sm" />
                    </div>

                    <div class="col-6 col-md-1">
                        <label class="form-label">Đến ngày</label>
                        <input type="date" class="form-control form-control-sm" />
                    </div>

                    <div class="col-12 col-md-1 d-flex align-items-end">
                        <button class="btn btn-danger w-100 btn-sm">
                            <i class="fas fa-search"></i> Xem
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <div class="card shadow-sm mb-4">
            <div class="card-header border-bottom-0">
                <h3 class="card-title"><i class="fas fa-clipboard-list me-1 text-secondary"></i> Kết quả xem trước</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover align-middle text-center mb-0">
                        <thead class="table-danger">
                            <tr>
                                <th>#</th>
                                <th>Mã phiếu xuất</th>
                                <th>Ngày xuất</th>
                                <th>Khách hàng</th>
                                <th>Chi nhánh</th>
                                <th>Loại xuất</th>
                                <th>Tổng giá trị</th>
                                <th>Trạng thái</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>1</td>
                                <td>PX00123</td>
                                <td>03/11/2025</td>
                                <td>Nguyễn Văn An</td>
                                <td>CN Nguyễn Văn Cừ</td>
                                <td>Xuất bán</td>
                                <td><span class="fw-bold text-danger">8.500.000 ₫</span></td>
                                <td><span class="badge bg-success">Hoàn tất</span></td>
                            </tr>
                            <tr>
                                <td>2</td>
                                <td>PX00122</td>
                                <td>01/11/2025</td>
                                <td>Trần Minh Hoàng</td>
                                <td>CN Nguyễn Văn Cừ</td>
                                  <td>Xuất điều chuyển</td>
                                <td><span class="fw-bold text-danger">3.200.000 ₫</span></td>
                                <td><span class="badge bg-info text-dark">Đã xác nhận</span></td>
                            </tr>
                            </tbody>
                    </table>
                </div>
            </div>
            
            <div class="card-footer">
                <div class="row gy-3 text-center">
                    <div class="col-12 col-md-4">
                        <div class="small-box bg-success" style="background-color: var(--custom-green-dark) !important;">
                            <div class="inner">
                                <h3 class="text-white">9</h3>
                                <p class="text-white">Tổng số phiếu</p>
                            </div>
                            <div class="icon">
                                <i class="fas fa-file-alt"></i>
                            </div>
                            <a href="#" class="small-box-footer">
                                Chi tiết <i class="fas fa-arrow-circle-right"></i>
                            </a>
                        </div>
                    </div>
                    <div class="col-12 col-md-4">
                        <div class="small-box" style="background-color: var(--custom-green-light) !important;">
                            <div class="inner">
                                <h3 class="text-white">125,4 Tr ₫</h3>
                                <p class="text-white">Tổng giá trị xuất</p>
                            </div>
                            <div class="icon">
                                <i class="fas fa-money-bill-wave"></i>
                            </div>
                            <a href="#" class="small-box-footer">
                                Chi tiết <i class="fas fa-arrow-circle-right"></i>
                            </a>
                        </div>
                    </div>
                    <div class="col-12 col-md-4">
                        <div class="small-box bg-info">
                            <div class="inner">
                                <h3 class="text-dark">5</h3>
                                <p class="text-dark">Số khách hàng</p>
                            </div>
                            <div class="icon">
                                <i class="fas fa-users"></i>
                            </div>
                            <a href="#" class="small-box-footer">
                                Chi tiết <i class="fas fa-arrow-circle-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="text-center text-md-end mb-4">
            <button class="btn btn-primary px-4 me-0 me-md-2 mb-2 mb-md-0 shadow">
                <i class="fas fa-save"></i> Lưu báo cáo
            </button>
            <button class="btn btn-outline-danger px-4 shadow">
                <i class="fas fa-paper-plane"></i> Gửi cho quản lý
            </button>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Khởi tạo Select2 cho các thẻ select (nếu bạn có thư viện Select2)
            $('.select2').select2({
                theme: 'bootstrap4' // Cần có style bootstrap4 cho select2
            });

            // Khởi tạo Card Widget (nút collapse)
            $('[data-card-widget="collapse"]').on('click', function () {
                var $card = $(this).closest('.card');
                $card.find('.card-body, .card-footer').slideToggle();
                $(this).find('i').toggleClass('fa-minus').toggleClass('fa-plus');
            });
        });
    </script>
}