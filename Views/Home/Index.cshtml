﻿@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "Tổng quan Kho hàng";
        Layout = "/Views/Shared/_Layout.cshtml";

    
    // MÀU SẮC CHỦ ĐẠO ADMINLTE
    // Sử dụng màu xanh lá cây đồng nhất "#28a745"
    var primaryColorAdminLTE = "#28a745"; 
    var uniformColor = "#28a745"; 
    var darkColor = "#343a40"; 
    
    // Giữ các biến giả lập dữ liệu, dù không dùng trong các card mới
    var tiLeLechKho = "0.5%";
    var tiLeNhapVsXuat = "120%"; 
    var hangDuoiDinhMuc = "8.2%"; 
    var tiLeChiếmDụngKho = "75%"; 
    var soLuongSKU = "450";
    var tongTriGiaTon = "4.5 Tỷ VNĐ";
}

<style>
    /* 1. Thiết lập hiệu ứng hover đồng nhất cho tất cả cards */
    .custom-card-hover {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        cursor: pointer;
    }

    .custom-card-hover:hover {
        transform: translateY(-5px); 
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15) !important;
    }
    
    /* 2. Đảm bảo các card có chiều cao đồng đều (220px theo yêu cầu) */
    .action-card-min-height {
        min-height: 220px; 
    }

    /* 3. FIX CỐ ĐỊNH FOOTER: Buộc thẻ <a> chiếm toàn bộ chiều cao thẻ cha (card) */
    /* Dùng !important để ghi đè các style xung đột khác */
    .card-link-fill {
        height: 100% !important;
    }
    
    /* Thiết kế lại Header Title */
    .dashboard-header {
        border-bottom: 3px solid @primaryColorAdminLTE;
        padding: 10px 0;
        margin-bottom: 15px;
    }

    /* Định nghĩa màu sắc đồng nhất (xanh lá) */
    .card-outline.card-uniform {
        border-top: 3px solid @uniformColor;
    }
    
    .bg-uniform {
        background-color: @uniformColor !important;
        color: white; 
    }
    
    .text-uniform {
        color: @uniformColor !important;
    }

    /* Đặt màu chữ cho footer của card uniform */
    .bg-uniform .card-footer {
        color: white !important;
    }
</style>

<div class="content-header">
    <div class="container-fluid">
        <div class="dashboard-header d-flex justify-content-between align-items-center">
            <h3 class="m-0 font-weight-bold text-dark">
                <i class="fas fa-warehouse mr-2 text-@primaryColorAdminLTE"></i> Tổng quan Kho hàng
            </h3>
            <span class="text-muted">Chi nhánh: <strong>Kho Tổng</strong> | Ngày: @DateTime.Now.ToString("dd/MM/yyyy")</span>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        
        <!-- HÀNG 1: QUẢN LÝ ĐỐI TÁC VÀ HÀNG HÓA CỐT LÕI -->
        <div class="row">
            
            <!-- CARD 1: DANH SÁCH NHÀ CUNG CẤP -->
            <div class="col-lg-4 col-md-6 col-sm-12 mb-3">
                @* LAYOUT FIX: Thẻ card là Flex container dọc *@
                <div class="card card-outline card-uniform shadow action-card-min-height custom-card-hover d-flex flex-column">
                    @* SỬ DỤNG CLASS CÀI ĐẶT CỨNG card-link-fill THAY CHO h-100 *@
                    <a asp-controller="NCC" asp-action="DanhSachNCC" class="text-decoration-none d-flex flex-column card-link-fill">
                        @* Giữ flex-grow-1 để body chiếm hết chiều cao còn lại và đẩy footer xuống đáy *@
                        <div class="card-body d-flex align-items-center p-3 flex-grow-1"> 
                            <div class="mr-3">
                                <i class="fas fa-handshake text-uniform" style="font-size: 3rem;"></i>
                            </div>
                            <div>
                                <h4 class="font-weight-bold text-uniform mb-0">DANH SÁCH NHÀ CUNG CẤP</h4>
                                <p class="text-muted mb-0">Xem danh sách nhà cung cấp/ Thêm nhà cung cấp </p>
                            </div>
                        </div>
                        <div class="card-footer text-center bg-uniform" style="padding: 10px 0;">
                            <span class="text-white font-weight-bold">Xem Chi Tiết <i class="fas fa-arrow-circle-right ml-2"></i></span>
                        </div>
                    </a>
                </div>
            </div>
            
            <!-- CARD 2: QUẢN LÝ KHO HÀNG (Hàng hóa chung) -->
            <div class="col-lg-4 col-md-6 col-sm-12 mb-3">
                @* LAYOUT FIX: Thẻ card là Flex container dọc *@
                <div class="card card-outline card-uniform shadow action-card-min-height custom-card-hover d-flex flex-column">
                    @* SỬ DỤNG CLASS CÀI ĐẶT CỨNG card-link-fill THAY CHO h-100 *@
                    <a asp-controller="HangHoa" asp-action="DanhSach" class="text-decoration-none d-flex flex-column card-link-fill">
                        <div class="card-body d-flex align-items-center p-3 flex-grow-1">
                            <div class="mr-3">
                                <i class="fas fa-box-open text-uniform" style="font-size: 3rem;"></i>
                            </div>
                            <div>
                                <h4 class="font-weight-bold text-uniform mb-0">QUẢN LÝ KHO HÀNG</h4>
                                <p class="text-muted mb-0">Xem danh sách hàng hóa trong kho/ Thêm hàng hóa</p>
                            </div>
                        </div>
                        <div class="card-footer text-center bg-uniform" style="padding: 10px 0;">
                            <span class="text-white font-weight-bold">Xem Chi Tiết <i class="fas fa-arrow-circle-right ml-2"></i></span>
                        </div>
                    </a>
                </div>
            </div>
            
            <!-- CARD 3: QUẢN LÝ LINH KIỆN -->
            <div class="col-lg-4 col-md-6 col-sm-12 mb-3">
                @* LAYOUT FIX: Thẻ card là Flex container dọc *@
                <div class="card card-outline card-uniform shadow action-card-min-height custom-card-hover d-flex flex-column">
                    @* SỬ DỤNG CLASS CÀI ĐẶT CỨNG card-link-fill THAY CHO h-100 *@
                    <a asp-controller="HangHoa" asp-action="QuanLyLinhKien" class="text-decoration-none d-flex flex-column card-link-fill">
                        <div class="card-body d-flex align-items-center p-3 flex-grow-1">
                            <div class="mr-3">
                                <i class="fas fa-cogs text-uniform" style="font-size: 3rem;"></i>
                            </div>
                            <div>
                                <h4 class="font-weight-bold text-uniform mb-0">QUẢN LÝ LINH KIỆN</h4>
                                <p class="text-muted mb-0">Xem danh sách linh kiện/ Thêm linh kiện mới</p>
                            </div>
                        </div>
                        <div class="card-footer text-center bg-uniform" style="padding: 10px 0;">
                            <span class="text-white font-weight-bold">Xem Chi Tiết <i class="fas fa-arrow-circle-right ml-2"></i></span>
                        </div>
                    </a>
                </div>
            </div>
        </div>

        <!-- HÀNG 2: QUẢN LÝ TÀI SẢN VÀ NGHIỆP VỤ -->
        <div class="row">
            
            <!-- CARD 4: QUẢN LÝ HÀNG HÓA KHÁC -->
            <div class="col-lg-4 col-md-6 col-sm-12 mb-3">
                @* LAYOUT FIX: Thẻ card là Flex container dọc *@
                <div class="card card-outline card-uniform shadow action-card-min-height custom-card-hover d-flex flex-column">
                    @* SỬ DỤNG CLASS CÀI ĐẶT CỨNG card-link-fill THAY CHO h-100 *@
                    <a asp-controller="HangHoa" asp-action="QuanLyXe" class="text-decoration-none d-flex flex-column card-link-fill">
                        <div class="card-body d-flex align-items-center p-3 flex-grow-1">
                            <div class="mr-3">
                                <i class="fas fa-car-side text-uniform" style="font-size: 3rem;"></i>
                            </div>
                            <div>
                                <h4 class="font-weight-bold text-uniform mb-0">QUẢN LÝ HÀNG HÓA KHÁC</h4>
                                <p class="text-muted mb-0">Xem danh sách hàng hóa trong kho/ Thêm hàng hóa</p>
                            </div>
                        </div>
                        <div class="card-footer text-center bg-uniform" style="padding: 10px 0;">
                            <span class="text-white font-weight-bold">Xem Chi Tiết <i class="fas fa-arrow-circle-right ml-2"></i></span>
                        </div>
                    </a>
                </div>
            </div>

            <!-- CARD 5: QUẢN LÝ NHÂN VIÊN -->
            <div class="col-lg-4 col-md-6 col-sm-12 mb-3">
                @* LAYOUT FIX: Thẻ card là Flex container dọc *@
                <div class="card card-outline card-uniform shadow action-card-min-height custom-card-hover d-flex flex-column">
                    @* SỬ DỤNG CLASS CÀI ĐẶT CỨNG card-link-fill THAY CHO h-100 *@
                    <a asp-controller="NhanVien" asp-action="NhanVien" class="text-decoration-none d-flex flex-column card-link-fill">
                        <div class="card-body d-flex align-items-center p-3 flex-grow-1">
                            <div class="mr-3">
                                <i class="fas fa-users-cog text-uniform" style="font-size: 3rem;"></i>
                            </div>
                            <div>
                                <h4 class="font-weight-bold text-uniform mb-0">QUẢN LÝ NHÂN VIÊN</h4>
                                <p class="text-muted mb-0">Thêm sửa xóa/ Phân quyền nhân viên</p>
                            </div>
                        </div>
                        <div class="card-footer text-center bg-uniform" style="padding: 10px 0;">
                            <span class="text-white font-weight-bold">Xem Chi Tiết <i class="fas fa-arrow-circle-right ml-2"></i></span>
                        </div>
                    </a>
                </div>
            </div>

            <!-- CARD 6: LỊCH SỬ GIAO DỊCH -->
            <div class="col-lg-4 col-md-6 col-sm-12 mb-3">
                @* LAYOUT FIX: Thẻ card là Flex container dọc *@
                <div class="card card-outline card-uniform shadow action-card-min-height custom-card-hover d-flex flex-column">
                    @* SỬ DỤNG CLASS CÀI ĐẶT CỨNG card-link-fill THAY CHO h-100 *@
                    <a asp-controller="GiaoDich" asp-action="TraCuu" class="text-decoration-none d-flex flex-column card-link-fill">
                        <div class="card-body d-flex align-items-center p-3 flex-grow-1">
                            <div class="mr-3">
                                <i class="fas fa-history text-uniform" style="font-size: 3rem;"></i>
                            </div>
                            <div>
                                <h4 class="font-weight-bold text-uniform mb-0">LỊCH SỬ GIAO DỊCH</h4>
                                <p class="text-muted mb-0">Xem danh sách/ Tùy chỉnh lịch sử giao dịch</p>
                            </div>
                        </div>
                        <div class="card-footer text-center bg-uniform" style="padding: 10px 0;">
                            <span class="text-white font-weight-bold">Xem Chi Tiết <i class="fas fa-arrow-circle-right ml-2"></i></span>
                        </div>
                    </a>
                </div>
            </div>
        </div>
        
    </div>
</section>

@section Scripts {
}